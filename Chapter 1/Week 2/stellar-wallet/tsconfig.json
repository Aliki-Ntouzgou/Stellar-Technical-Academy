{
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
  
    "baseUrl": "./src",
    "paths": {
      "@stellar-prompt/*": ["components/stellar-prompt/*"],
      "@services/*": ["services/*"]
    },
    
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "jsx": "react",
    "jsxFactory": "h"
  }
 }
